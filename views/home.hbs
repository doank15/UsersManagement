{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn btn-outline-primary border-1 ml-2" data-bs-dismiss="alert" aria-label="Close"><i
            class="bi bi-x"></i></button>
</div>
{{/if}}
<div class="table-responsive-sm">
    <table class="table table-striped table-hover table-success table-sm table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col" class="text-right">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <th scope="row">{{this._id}}</th>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td class="text-right">
                    <a href="/views/view-user/{{this._id}}" type="button" class="btn  btn-sm btn-light"><i
                            class="bi bi-eye"></i>View</a>
                    <a href="/views/edit-user/{{this._id}}" type="button" class="btn  btn-sm btn-light"><i
                            class="bi bi-pencil"></i>Edit</a>
                    <a href="/{{this._id}}" type="button" class="btn  btn-sm btn-light"><i class="bi bi-person-x"></i>Delete</a>
                    <a href="/views/sendEmail/{{this._id}}" type="button" class="btn  btn-sm btn-light"><i class="bi bi-send mr-2"></i>Send Email</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div>
    {{#if hasPreviousPage}}
    <a href="?page={{previousPage}}">Previous</a>
    {{/if}}
    {{#if hasNextPage}}
    <a href="?page={{nextPage}}">Next</a>
    {{/if}}
</div>